<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout 
        android:id="@+id/toggle_frame"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?android:attr/listChoiceBackgroundIndicator">
            <ImageView android:id="@+id/toggle_icon"
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">
            </ImageView>

            <TextView android:id="@+id/toggle_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center">
            </TextView>

            <ImageView android:id="@+id/toggle_indic"
                android:layout_width="match_parent"
            	android:layout_height="10dp"
                android:layout_gravity="fill_horizontal|bottom">
            </ImageView>

    </FrameLayout>

	<SeekBar android:id="@+id/ringtone_seekbar"
		 android:layout_width="0dp"
		 android:layout_height="match_parent"
         android:layout_weight="1"
		 android:layout_marginLeft="1dip"
		 android:layout_marginRight="1dip">
	</SeekBar>
</LinearLayout>
